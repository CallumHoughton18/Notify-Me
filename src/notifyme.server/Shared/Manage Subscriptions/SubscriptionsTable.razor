@using notifyme.shared.Helpers
@using notifyme.shared.Models.DataStore_Models

<MudTable Items="@Subscriptions">
    <HeaderContent>
        <MudTh>Subscription Name</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Subscription Name">@context.DeviceName</MudTd>
    </RowTemplate>
        <RowEditingTemplate>
            <MudTd DataLabel="Subscription Name">
                <MudTextField @bind-Value="@context.DeviceName" Required/>
            </MudTd>
        </RowEditingTemplate>
</MudTable>

@code {
    [Parameter]
    public RangeObservableCollection<SavedNotificationSubscription> Subscriptions { get; set; }
}