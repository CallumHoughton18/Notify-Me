@inherits LayoutComponentBase
<MudThemeProvider Theme="NeutralBlueTheme"/>
<MudLayout>
    <AppBar OnDrawButtonClick="DrawerToggle"></AppBar>
    <AuthorizeView>
        <Authorized>
            <AppNavigationDraws DrawerOpen="DrawerOpen" UserName="@context.User.Identity.Name"></AppNavigationDraws>
        </Authorized>
        <NotAuthorized>
            <RedirectToLogin></RedirectToLogin>
        </NotAuthorized>
    </AuthorizeView>
    <MudMainContent Class="mt-8 px-8">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    public bool DrawerOpen { get; set; }

    MudTheme NeutralBlueTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#c6ad8f",
            AppbarText = "#f5f5f5",
            Secondary = "#425664",
            AppbarBackground = "#425664",
            Background = "#f6f4f2",
            DrawerBackground = "#f6f4f2",
            Surface = "#f6f4f2",
            Error = "#823e4c",
            Warning = "#eb9a28",
            Success = "#445a35"

        }
    };

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }

}