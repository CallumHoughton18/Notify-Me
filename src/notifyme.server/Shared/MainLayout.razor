@inherits LayoutComponentBase
<MudThemeProvider/>
<MudLayout>
    <AppBar OnDrawButtonClick="DrawerToggle"></AppBar>
    <AuthorizeView>
        <Authorized>
            <AppNavigationDraws DrawerOpen="DrawerOpen" UserName="@context.User.Identity.Name"></AppNavigationDraws>
        </Authorized>
        <NotAuthorized>
            <RedirectToLogin></RedirectToLogin>
        </NotAuthorized>
    </AuthorizeView>
    <MudMainContent Class="pt-16 px-16">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    public bool DrawerOpen { get; set; } = true;

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }

}